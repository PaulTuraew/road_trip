
<div class= "single_message_show">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Sender:</strong>
    <%= @message.sender.username %>
  </p>

  <p>
    <strong>Recipient:</strong>
    <%= @message.recipient.username %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= @message.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @message.body %>
  </p>

  <%= link_to 'Back', user_messages_path(current_user), class: 'game_page_link'  %>
</div>
