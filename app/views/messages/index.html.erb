<h1>Messages#index</h1>

<section class="inbox">
  <h2>My Inbox</h2>
  <div class="messages">
  <div class="sent">
    <h3> Sent (<%= current_user.sent_messages.count %>) </h3>
      <% current_user.sent_messages.each do |message| %>
        <h4><%=  message.title %></h4>
        <p> <%= message.body %> </p>
       <!--  there was a link that took you to delete through user_message_path but broke the template, showed as NoMethodError-->

      <% end %>
  </div>
  <div class="received">
    <h3> Recieved (<%= current_user.received_messages.count %>) </h3>
    <% current_user.received_messages.each do |message| %>
     <h4><%=  link_to message.title, user_message_path(user_id: message.recipient_id, id: message.id) %> </h4>
      <p><%= message.body %> </p>

    <% end %>
  </div>
  </div>
</section>
