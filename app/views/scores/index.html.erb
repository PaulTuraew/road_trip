<h1 class="page_banner banner_content">Roadtrip</h1>
<h2>Leader Board</h2>
<%= link_to "Play Again", games_index_path %><br />
<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %><br />


<table>
  <thead>

    <tr>
      <th>Score</th>
      <th>Username</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>

  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.score %></td>
        <td><%= score.user.username %></td>
        <td><%= score.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= render 'layouts/signin_status' %>
